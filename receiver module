/*
 * ESP8266 - OLED Display WiFi Receiver
 * 
 * Receives data wirelessly from ESP32
 * 
 * OLED DISPLAY:
 *   SDA -> D2 (GPIO 4)
 *   SCL -> D1 (GPIO 5)
 *   VDD -> 3.3V
 *   GND -> GND
 * 
 * NO WIRES NEEDED TO ESP32!
 */

#include <ESP8266WiFi.h>
#include <WiFiUdp.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

// WiFi credentials - SAME AS ESP32
const char* ssid = "YOUR_WIFI_NAME";        // Change this
const char* password = "YOUR_WIFI_PASSWORD"; // Change this

const int udpPort = 4210;

WiFiUDP udp;

// OLED settings
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_ADDR 0x3C

#define I2C_SDA D2  // GPIO 4
#define I2C_SCL D1  // GPIO 5

Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, -1);

// Sensor values
int flex1 = 0;
int flex2 = 0;
int flex3 = 0;
int flex4 = 0;
String message = "IDLE";

char packetBuffer[255];
unsigned long lastReceived = 0;
bool dataReceived = false;

void setup() {
  Serial.begin(115200);
  delay(1000);
  
  Serial.println("\n=== ESP8266 OLED WiFi Receiver ===");
  
  // Initialize I2C for OLED
  Wire.begin(I2C_SDA, I2C_SCL);
  Wire.setClock(100000);
  
  // Initialize OLED
  if(!display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR)) {
    Serial.println("OLED init failed!");
    while(1);
  }
  
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(0, 0);
  display.println("Connecting WiFi...");
  display.display();
  
  // Connect to WiFi
  Serial.print("Connecting to WiFi: ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  
  int attempts = 0;
  while (WiFi.status() != WL_CONNECTED && attempts < 20) {
    delay(500);
    Serial.print(".");
    attempts++;
  }
  
  display.clearDisplay();
  display.setCursor(0, 0);
  
  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("\nWiFi connected!");
    Serial.print("ESP8266 IP address: ");
    Serial.println(WiFi.localIP());
    Serial.println("Waiting for data from ESP32...");
    
    display.println("WiFi Connected!");
    display.println();
    display.print("IP: ");
    display.println(WiFi.localIP());
    display.println();
    display.println("UPDATE ESP32 CODE");
    display.println("with this IP!");
  } else {
    Serial.println("\nWiFi connection failed!");
    display.println("WiFi Failed!");
    display.println("Check credentials");
  }
  
  display.display();
  delay(3000);
  
  udp.begin(udpPort);
  Serial.print("UDP listening on port: ");
  Serial.println(udpPort);
}

void loop() {
  // Check for incoming UDP packets
  int packetSize = udp.parsePacket();
  if (packetSize) {
    int len = udp.read(packetBuffer, 255);
    if (len > 0) {
      packetBuffer[len] = 0; // Null terminate
    }
    
    String receivedData = String(packetBuffer);
    Serial.print("Received: ");
    Serial.println(receivedData);
    
    parseData(receivedData);
    lastReceived = millis();
    dataReceived = true;
  }
  
  // Update display
  updateDisplay();
  
  // Check connection timeout
  if (dataReceived && (millis() - lastReceived > 3000)) {
    dataReceived = false;
  }
  
  delay(50);
}

void parseData(String data) {
  // Parse format: F1:value1,F2:value2,F3:value3,F4:value4,MSG:message
  
  int f1Index = data.indexOf("F1:");
  int f2Index = data.indexOf("F2:");
  int f3Index = data.indexOf("F3:");
  int f4Index = data.indexOf("F4:");
  int msgIndex = data.indexOf("MSG:");
  
  if (f1Index != -1 && f2Index != -1 && f3Index != -1 && f4Index != -1) {
    flex1 = data.substring(f1Index + 3, f2Index - 1).toInt();
    flex2 = data.substring(f2Index + 3, f3Index - 1).toInt();
    flex3 = data.substring(f3Index + 3, f4Index - 1).toInt();
    flex4 = data.substring(f4Index + 3, msgIndex - 1).toInt();
    
    if (msgIndex != -1) {
      message = data.substring(msgIndex + 4);
      message.trim();
    }
  }
}

void updateDisplay() {
  display.clearDisplay();
  display.setTextColor(SSD1306_WHITE);
  
  if (dataReceived) {
    // Check if there's an active message
    if (message != "IDLE") {
      // Display large message
      display.setTextSize(1);
      display.setCursor(0, 0);
      display.println("MESSAGE:");
      display.drawLine(0, 10, SCREEN_WIDTH, 10, SSD1306_WHITE);
      
      // Word wrap the message
      display.setTextSize(2);
      int lineWidth = 10;
      int cursorY = 20;
      String words = message;
      int startPos = 0;
      
      while (startPos < words.length()) {
        int endPos = startPos + lineWidth;
        if (endPos > words.length()) endPos = words.length();
        
        if (endPos < words.length()) {
          int spacePos = words.lastIndexOf(' ', endPos);
          if (spacePos > startPos) endPos = spacePos;
        }
        
        String line = words.substring(startPos, endPos);
        line.trim();
        display.setCursor(5, cursorY);
        display.println(line);
        cursorY += 16;
        
        startPos = endPos + 1;
        if (cursorY > 55) break;
      }
      
    } else {
      // Display sensor values
      display.setTextSize(1);
      display.setCursor(0, 0);
      display.println("Flex Sensor Monitor");
      display.drawLine(0, 10, SCREEN_WIDTH, 10, SSD1306_WHITE);
      
      display.setCursor(0, 15);
      display.print("F1: ");
      display.print(flex1);
      
      display.setCursor(0, 27);
      display.print("F2: ");
      display.print(flex2);
      
      display.setCursor(0, 39);
      display.print("F3: ");
      display.print(flex3);
      
      display.setCursor(0, 51);
      display.print("F4: ");
      display.print(flex4);
      
      // Draw bars
      int barWidth;
      
      barWidth = map(flex1, 400, 550, 0, 80);
      barWidth = constrain(barWidth, 0, 80);
      display.fillRect(45, 15, barWidth, 6, SSD1306_WHITE);
      
      barWidth = map(flex2, 400, 550, 0, 80);
      barWidth = constrain(barWidth, 0, 80);
      display.fillRect(45, 27, barWidth, 6, SSD1306_WHITE);
      
      barWidth = map(flex3, 400, 550, 0, 80);
      barWidth = constrain(barWidth, 0, 80);
      display.fillRect(45, 39, barWidth, 6, SSD1306_WHITE);
      
      barWidth = map(flex4, 400, 550, 0, 80);
      barWidth = constrain(barWidth, 0, 80);
      display.fillRect(45, 51, barWidth, 6, SSD1306_WHITE);
    }
    
  } else {
    // No connection
    display.setTextSize(2);
    display.setCursor(10, 25);
    display.println("NO DATA");
  }
  
  display.display();
}
